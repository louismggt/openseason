<div class="container row title mt-4 mb-3 pl-3 pr-3 pb-2">
  <div class="job-container">
    <div class="upper-side d-flex justify-content-around">
      <div class="job-logo">
        <% if job.logo == "" %>
        <%= image_tag "missing_logo.png" %>
        <% else %>
        <%= image_tag job.logo %>
      <% end %>
      </div>
        <div class="text-elements flex-column">
          <h4 class="job-title text-center"><%=job.title%></h4>
          <p class="job-description text-center"><%=job.description%></p>
        </div>
    </div>
    <div class="lower-side d-flex justify-content-around mt-3 mb-3">
      <div class="fontawesome-icon"><i class="fas fa-map-marker-alt"></i> <%=job.address%></div>
      <div class="btn btn-success">OUI</div>
    </div>
  </div>
</div>

