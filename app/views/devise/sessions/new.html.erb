<div class="container d-flex justify-content-center shadow-none mt-0">
  <div class="row mr-3 ml-3">
    <div class="form-login">
      <h2>CONNEXION</h2>
      <%= image_tag "Logo_3_OS.png", class: "form-image" %>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: "E-mail",
                      placeholder: "avrillavigne@gmail.com",
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      label: "Mot de passe",
                      placeholder: "******",
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Connexion" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
